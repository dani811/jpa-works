
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="test-relationships">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.bagab.entity.relationships.one2one_uni.model.Employee</class>
        <class>org.bagab.entity.relationships.one2one_uni.model.ParkingLotEntity</class>
        <class>org.bagab.entity.relationships.one2one_bi.Employee</class>
        <class>org.bagab.entity.relationships.one2one_bi.ParkingLot</class>
        <class>org.bagab.entity.relationships.many2one.Department</class>
        <class>org.bagab.entity.relationships.many2one.Employee</class>
        <class>org.bagab.entity.relationships.one2many_bi.Department</class>
        <class>org.bagab.entity.relationships.one2many_bi.Employee</class>


        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jpa_works" />
            <property name="javax.persistence.jdbc.user" value="jpa_works" />
            <property name="javax.persistence.jdbc.password" value="jpa_works" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
            <property name="hibernate.mapping.auto-import" value="false" />

        </properties>

    </persistence-unit>

</persistence>
