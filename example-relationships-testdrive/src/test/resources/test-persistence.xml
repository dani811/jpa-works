
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="test-relationships">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <non-jta-data-source>java:jboss/datasources/jpaworksDS</non-jta-data-source>

        <class>org.bagab.entity.relationships.one2one_uni.Employee</class>
        <class>org.bagab.entity.relationships.one2one_uni.ParkingLot</class>
        <class>org.bagab.entity.relationships.one2one_bi.Employee</class>
        <class>org.bagab.entity.relationships.one2one_bi.ParkingLot</class>
        <class>org.bagab.entity.relationships.many2one.Department</class>
        <class>org.bagab.entity.relationships.many2one.Employee</class>
        <class>org.bagab.entity.relationships.one2many_bi.Department</class>
        <class>org.bagab.entity.relationships.one2many_bi.Employee</class>

        <properties>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>

    </persistence-unit>

</persistence>
