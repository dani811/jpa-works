
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jpa_app">
        <!--<provider>org.hibernate.ejb.HibernatePersistence</provider>-->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <non-jta-data-source>java:jboss/datasources/jpa-app-DS</non-jta-data-source>

        <class>org.bagab.example.jpa.app.model.Address</class>
        <class>org.bagab.example.jpa.app.model.Department</class>
        <class>org.bagab.example.jpa.app.model.Employee</class>
        <class>org.bagab.example.jpa.app.model.Phone</class>
        <class>org.bagab.example.jpa.app.model.Project</class>
        <class>org.bagab.example.jpa.app.model.DesignProject</class>
        <class>org.bagab.example.jpa.app.model.QualityProject</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>

    </persistence-unit>

</persistence>
